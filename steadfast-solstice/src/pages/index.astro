---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Carusell from '../components/Carusell.astro';
import CuadrosPreviewIndex from '../components/CuadrosPreviewIndex.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="hero">
				<h1>Young Life</h1>
				<h2>Metro Alajuela</h2>
				<Carusell />
			</div>
			<CuadrosPreviewIndex />
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		background-color:white;
		padding: 2em;
		box-shadow: 0 2px 8px rgba(var(--black), 15%);
	}

	.hero h1{
		font-size: 7em;
		/* color: #839345;*/ 
		color: var(--verdeYL);
		margin-bottom: -20px;
	}

	.hero h2{
		font-family: r;
		color: #0b1250;
		font-size: 3em;
	}
</style>