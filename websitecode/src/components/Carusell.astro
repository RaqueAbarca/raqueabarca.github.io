                <img src="/raqueabarca.github.io/campaNuevosI2023.JPEG" alt="Imagen 2">
            </div>
        </div>
    </div>
    <script>
        const carousel = document.querySelector('.carousel');
        const slides = document.querySelectorAll('.carousel-slide');
        let currentIndex = 0;

        function nextSlide() {
            currentIndex = (currentIndex + 1) % slides.length;
            updateCarousel();
        }

        function updateCarousel() {
            const offset = -currentIndex * 700; // Ancho de la imagen
            carousel.style.transform = `translateX(${offset}px)`;
        }

        setInterval(nextSlide, 3000); // Cambia la imagen cada 3 segundos

        updateCarousel();
    </script>
</body>


<style>
    /* Estilos para el carrusel */
    .carousel-container {
        width: 700px; /* Ajusta el ancho deseado del carrusel */
